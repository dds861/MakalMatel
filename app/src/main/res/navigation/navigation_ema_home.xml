<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/graphHome"
            app:startDestination="@id/categoryViewFragment">


    <fragment
        android:id="@+id/homeViewFragment"
        android:name="com.dd.database.sqlite.ui.home.EmaHomeFragment"
        android:label="HomeViewFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeViewFragment_to_userFragment"
            app:destination="@id/UserViewFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_homeViewFragment_to_emaErrorViewActivity"
            app:destination="@id/emaErrorViewActivity" />
        <action
            android:id="@+id/action_homeViewFragment_self"
            app:destination="@id/homeViewFragment" />
    </fragment>

    <fragment
        android:id="@+id/UserViewFragment"
        android:name="com.dd.database.sqlite.ui.user.EmaUserFragment"
        android:label="@string/user_toolbar_title"
        tools:layout="@layout/fragment_user">
    </fragment>
    <activity
        android:id="@+id/emaErrorViewActivity"
        android:name="com.dd.database.sqlite.ui.error.EmaErrorToolbarViewActivity"
        android:label="EmaErrorViewActivity" />
    <fragment
        android:id="@+id/categoryViewFragment"
        android:name="com.dd.database.sqlite.ui.category.CategoryViewFragment"
        android:label="CategoryViewFragment" >
        <action
            android:id="@+id/action_categoryViewFragment_to_makalViewFragment"
            app:destination="@id/makalViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/makalViewFragment"
        android:name="com.dd.database.sqlite.ui.makals.MakalViewFragment"
        android:label="MakalViewFragment" />


</navigation>