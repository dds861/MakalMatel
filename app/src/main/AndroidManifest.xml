<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dd.kazakh.portal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_pen"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_pen"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <receiver android:name=".makalMatel.WidgetMakalMatel">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/new_app_widget_info" />
        </receiver>

        <activity
            android:name=".ertegiler.ActivityFairyTaleText"
            android:parentActivityName=".ertegiler.ActivityListFairyTales" />
        <activity android:name=".ertegiler.ActivityListFairyTales" />
        <activity android:name=".makalMatel.ActivityMakalList" />

        <activity
            android:name=".Main3Activity"
            android:label="@string/app_name"
            android:parentActivityName=".Main3Activity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>